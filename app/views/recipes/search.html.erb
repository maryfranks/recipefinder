<h1>Hello World</h1>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:search, "Search for (e.g. chocolate):") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <% @recipes.each do | recipe | %>
  <tr>
    <td><%= link_to image_tag(recipe["image_url"]), recipe["source_url"] %></td>
    <td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
    <td><%= recipe["publisher"] %></td>
  </tr>
  <% end %>
</table>
